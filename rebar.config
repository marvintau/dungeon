{erl_opts, [debug_info, {native, o3}]}.
{deps, [
    {cowboy, {git, "https://github.com/ninenines/cowboy.git"}},
        {jiffy, {git, "https://github.com/davisp/jiffy.git"} }
    ]}.

{ plugins, [
    {pc, {git, "https://github.com/blt/port_compiler", {branch, "master"}}}
]}.

{provider_hooks, [
    {pre, [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
    ]}
]}.
